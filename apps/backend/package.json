{
  "name": "@task-manager-v2/backend",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "prebuild": "pnpm prisma generate",
    "build": "nest build",
    "prestart": "pnpm prisma migrate deploy",
    "start": "node --enable-source-maps dist/main",
    "dev": "nest start --debug --watch",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.ts"
  },
  "dependencies": {
    "@brakebein/nestjs-redoc": "2.4.0",
    "@nestjs/common": "10.3.8",
    "@nestjs/config": "3.2.2",
    "@nestjs/core": "10.3.8",
    "@nestjs/platform-express": "10.3.8",
    "@nestjs/swagger": "7.3.1",
    "@prisma/client": "5.13.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "deep-object-diff": "1.1.9",
    "nestjs-pino": "4.0.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.3.2",
    "@nestjs/schematics": "10.1.1",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "4.17.21",
    "@types/jest": "^29.5.2",
    "@types/node": "20.12.7",
    "@types/supertest": "^6.0.0",
    "jest": "^29.5.0",
    "prisma": "5.12.1",
    "source-map-support": "0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
